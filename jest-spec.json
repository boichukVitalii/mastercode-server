{
	"collectCoverageFrom": [
		"**/*.(t|j)s"
	],
	"coverageDirectory": "../coverage",
	"moduleFileExtensions": [
		"js",
		"json",
		"ts"
	],
	"rootDir": "src",
	"moduleNameMapper": {
		"^src/(.*)$": "<rootDir>/$1"
	},
	"testEnvironment": "node",
	"testRegex": ".*\\.spec\\.ts$",
	"transform": {
		"^.+\\.(t|j)s$": "ts-jest"
	}
}