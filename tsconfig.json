{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "./dist",
		"esModuleInterop": true,
		"moduleResolution": "node",
		"lib":[ "ES2020" ],
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
		"strict": true,
		"strictPropertyInitialization": false,
  },
	"include": [
		"**/*/.eslintrc.js",
		"src/**/*",
		"test/*"
	]
}
